<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Blocked_requires_blocked_reason</fullName>
    <active>true</active>
    <errorConditionFormula>ISPICKVAL(Status__c, &quot;Blocked&quot;) &amp;&amp; ISBLANK(Blocked_Reason__c)</errorConditionFormula>
    <errorDisplayField>Blocked_Reason__c</errorDisplayField>
    <errorMessage>Please include a blocked reason</errorMessage>
</ValidationRule>
